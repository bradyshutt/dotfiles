#!/bin/bash

if [[ $# < 1 ]] ; then 
   echo "Usage: "
   echo " Brightness [-2] "  
   echo " Brightness [-4] "  
   echo " Brightness [-6] "  
   echo " Brightness [-8] " 
   echo " Brightness [-1] "  
else
   if [[ $1 == "1" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.1 

   elif [[ $1 == "2" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.2 

   elif [[ $1 == "3" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.3 

   elif [[ $1 == "4" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.4 

   elif [[ $1 == "5" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.5 

   elif [[ $1 == "6" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.6 

   elif [[ $1 == "7" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.7 

   elif [[ $1 == "8" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.8 

   elif [[ $1 == "9" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 0.9 

   elif [[ $1 == "10" ]] ; then 
      xrandr --output HDMI-1-1 --brightness 1.0 
   fi
fi



